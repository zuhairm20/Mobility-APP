<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/instabug_actionbar_height"
    android:id="@+id/instabug_bottom_bar_toolbar"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/instabug_brush_stroke"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_below="@+id/brush_icon_container"
                android:layout_centerHorizontal="true"
                android:background="@color/instabug_annotation_color_blue" />

            <FrameLayout
                android:id="@+id/brush_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageButton
                    android:id="@+id/instabug_action_pick_color"
                    android:layout_width="35dp"
                    android:layout_height="22dp"
                    android:scaleType="center"
                    android:background="@null"
                    android:onClick="onClick"
                    android:src="@drawable/instabug_ic_tool_pen" />
            </FrameLayout>

        </RelativeLayout>
    </FrameLayout>

    <ImageButton
        android:id="@+id/instabug_action_open_composer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:onClick="onClick"
        android:src="@drawable/instabug_ic_tool_text" />

    <ImageButton
        android:id="@+id/instabug_action_clear_annotations"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:onClick="onClick"
        android:src="@drawable/instabug_ic_tool_clear" />
</LinearLayout><!-- From: file:/Users/mSobhy/workspaces/android/instabug-android/instabugsupport/src/main/res/layout/instabug_lyt_bottom_bar.xml -->