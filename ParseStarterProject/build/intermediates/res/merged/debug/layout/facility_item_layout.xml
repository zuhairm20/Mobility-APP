<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/facilityName"
        android:textColor="#ff60258e"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/facilityDescription"
        android:layout_alignStart="@+id/facilityDescription"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"
        android:id="@+id/facilityAddress"
        android:textColor="#ff000000"
        android:layout_below="@+id/facilityName"
        android:layout_alignLeft="@+id/facilityName"
        android:layout_alignStart="@+id/facilityName"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="3dp"
         />

    <TextView
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/facilityDescription"
        android:textColor="#ff525253"
        android:text="Facility description"
        android:layout_below="@+id/facilityAddress"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView10"
        android:layout_alignTop="@+id/facilityName"
        android:layout_toLeftOf="@+id/facilityName"
        android:layout_toStartOf="@+id/facilityName"
        android:layout_marginRight="12dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/facilityPicture"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/imageView10"
        android:layout_alignLeft="@+id/imageView10"
        android:layout_alignStart="@+id/imageView10"
        android:backgroundTint="#ffffffff" />


</RelativeLayout><!-- From: file:/Users/Zuhair/Desktop/Development/Apps/Mobility%20App/ParseStarterProject/src/main/res/layout/facility_item_layout.xml -->